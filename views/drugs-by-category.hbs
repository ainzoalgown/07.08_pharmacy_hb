<div class="drugs-list" style="margin: 10px 0 10px 10px">
    <h1>Категория: {{categoryName}}</h1>
    <ul style="list-style: none">
        {{#each drugs as |drug|}}
            <li>
                <div class="one-drug">
                    <img src="{{drug.image}}" alt="Фото Лекарства">
                    <h2 class="drug-name"><a href="/drugs/{{drug._id}}">{{drug.name}}</a></h2>
                    <h4>Цена: {{drug.price}} руб.</h4>
                </div>
            </li>
        {{/each}}
    </ul>
</div>